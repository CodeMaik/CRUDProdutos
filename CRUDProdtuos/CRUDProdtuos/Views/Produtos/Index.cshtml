@model IEnumerable<CRUDProdtuos.Models.ProdutoModel>

<h1>Produtos</h1>

<p>
    <a href="@Url.Action("CadastrarProd", "Produtos")" class="btn btn-primary">Cadastrar Novo Produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.Preco</td>
                <td>@produto.Descricao</td>
                <td>@produto.Quantidade</td>
                <td>
                    <a href="@Url.Action("Editar", "Produtos", new { id = produto.Id })" class="btn btn-warning">Editar</a>
                    <form method="post" action="@Url.Action("Delete", "Produtos", new { id = produto.Id })" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>